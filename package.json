  "types": "dist/src/index.d.ts",
  "repository": "https://github.com/martonlederer/chrome-storage-promises",
  "author": "Marton Lederer <marton@lederer.hu>",
  "license": "MIT",
  "private": false,
  "devDependencies": {
    "@rollup/plugin-commonjs": "^17.1.0",
    "@rollup/plugin-node-resolve": "^11.1.1",
    "@types/chrome": "^0.0.129",
    "prettier": "^2.2.1",
    "rollup": "^2.38.5",
    "rollup-plugin-typescript2": "^0.29.0",
    "typescript": "^4.1.5",
    "yorkie": "^2.0.0"
  }
}
